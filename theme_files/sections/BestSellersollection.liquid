{% if section.settings.best-sellers %}
  <div id="best-selling-collection" class="best-selling-collection">
    <div class="container">
      <div class="section-space"></div>
      <div class="title-space text-align-center">
        <h3>{{ section.settings.title }}</h3>
        <p>{{ section.settings.text }}</p>      
      </div>
      <div class="bestseller-products">
        {% for product in collections[section.settings.collection].products %}
          <div class="bestseller-product">
            <a class="quickview" id="quickviewbtn1" {% if section.settings.quick-view %} href="#" {% else %} href="{{product.url}}" {% endif %}>
              <div class="mark">
                <img src="{{ 'mark-hot.png' | asset_img_url: '' }}" alt="">
              </div>
              <div class="product-img">
                <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{product.title}}">
              </div>
              <div class="product-stars">
                <img src="{{ 'stars.png' | asset_img_url: '' }}" alt="rating">
              </div>
              {% assign product_title = product.title | split: '-' %}
              <span class="sm-title">{{product_title[0]}}</span>
              <p class="sm-p">
                <i>
                  {{ product.description | strip_html | truncate: 40 }}
                </i>
              </p>
            </a>
            {% form 'product', product, data-productid: product.id, id:form_id, class:'x-fc__form', data-cart-form: '' %}
              <select name="id" data-productid="{{ product.id }}" id="ProductSelect-{{ section.id }}" style="display: none;">
              {% for variant in product.variants %}
                <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} {% unless variant.available %} disabled="disabled" {% endunless %} value="{{ variant.id }}" data-sku="{{ variant.sku }}">{{ variant.title }} - {% if variant.available %}{{ variant.price | money_with_currency }}{% else %}{{ 'products.product.sold_out' | t }}{% endif %}</option>
                  {% endfor %}
              </select>
              {% assign price = current_variant.price | money_without_trailing_zeros %}
                <p class="product__price{% if shop.taxes_included or shop.shipping_policy.body != blank %} product__price--has-policies{% endif %}" style="display: none;">
                <meta itemprop="priceCurrency" content="{{ cart.currency.iso_code }}">
                <meta itemprop="price" content="{{ current_variant.price | divided_by: 100.00 }}">
                {% if product.compare_at_price_max > product.price %}
                  <span class="visually-hidden">{{ 'products.general.regular_price' | t }}</span>
                  <span class="product__price--reg">{{ current_variant.compare_at_price | money_without_trailing_zeros }}</span>
                  <span class="product__price--sale">{{ 'products.general.now_price_html' | t: price: price }}</span>
                {% else %}
                  <span class="visually-hidden">{{ 'products.general.regular_price' | t }}</span>
                  <span class="product__price--reg js-price">
                    {{ price }}
                  </span>
                {% endif %}
              {% include 'product-unit-price', variant: current_variant %}
                </p>
            {% if product.available %}
              <button id="AddToCart-{{ section.id }}" type="submit" name="add" class="btn btn--add-to-cart x-fc__btn site-btn">
                <span class="x-fc__btn-text">Add to Bag</span>
                <p class="x-fc__btn-price"> - {{ product.price | money }}</p>
              </button>
            {% else %}
              <button type="button" class="btn btn--add-to-cart btn--disabled{% if section.settings.enable_payment_button %} btn--secondary-accent{% endif %} x-fc__btn site-btn" disabled="disabled">
                {{ 'products.product.sold_out' | t }}
              </button>
            {% endif %}
            {% endform %}
          </div>
        {% endfor %}  
      </div>
      <div class="section-space"></div>
    </div>
  </div>


  <!-- Quick view Popup -->
  <div class="quick-view-popup">
    <div class="quick-view-wrapper">
      <div class="quick-view-canvas">
        
        <!-- Quick view Slides -->
        <div class="quick-view-slides">
          <div class="quick-view-slide" style="background-image: url({{ 'quick-view-slide-1.png' | asset_url }});">
          </div>
          <div class="Hero__nav-inner">
              <div class="Hero__nav-items">
                    <div id="x-hero-nav-item-1" class="Hero__nav-item Hero_nav-item-selected"></div>              
                    <div id="x-hero-nav-item-2" class="Hero__nav-item "></div>
                    <div id="x-hero-nav-item-3" class="Hero__nav-item "></div>
              </div>
          </div>
        </div>
        <!-- /.Quick view Slides -->

        <!-- Quick view Caption -->
        <div class="quick-view-caption">
          <a href="#" class="cta-close close-quickview"></a>
          <span class="xs-p"><i>Clean Bettr Facial Cleanser</i></span>
          <h3>“Lorem ipsum dolor sit amet, consectetur elit.” – John D.</h3>
          <a href="#" class="numb-reviews"><img src="{{ 'stars.png' | asset_img_url: '' }}" alt=""> 1,085 Reviews</a>
          <p class="sm-title-p">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore, et dolore magna.</p>
          <div class="text-align-center">
            <form action="">
              <input type="number" id="quantity" name="quantity" value="1" min="1" max="10">
              <button>Add to Bag — $40</button>
            </form>
            <p class="sm-p">or 4 installments of $10.00 with <a href="#"><img src="{{ 'split-it.png' | asset_img_url: '' }}" alt=""></a></p>
            <p class="sm-p">Order now and it ships by Friday, February 26.</p>
            <a href="#" class="text-link">Click to Subscribe & Save</a><br>
            <div class="payment-methods">
              <a href="#"><img src="{{ 'payment-methods.png' | asset_img_url: '' }}" alt=""></a>
            </div>
            <a class="ctaDefault ctaBlack full-width" href="#">View Full Product Page</a>
          </div>
        </div>
        <!-- /.Quick view Caption -->

      </div>
    </div>
  </div>
  <!-- /.Quick view Popup -->

{% endif %}


{% schema %}
  {
    "name": "Bettr Best Selles",
    "settings": [
      {
        "type": "checkbox",
        "id": "best-sellers",
        "label": "Enable Best Sellers"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Collection Title"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Collection Text"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Choose a collection"
      },
      {
        "type": "checkbox",
        "id": "quick-view",
        "label": "Enable Quick View"
      }
    ],
    "presets": [
      {
        "category": "Collection",
        "name": "Best Sellers"
      }
    ]
  }
{% endschema %}